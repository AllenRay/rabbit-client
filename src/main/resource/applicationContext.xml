<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-4.0.xsd
     http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd">

    <context:component-scan base-package="rabbit"/>
    <context:annotation-config/>

    <context:property-placeholder location="application.properties" system-properties-mode="OVERRIDE"/>

    <bean id="channelFactory" class="rabbit.ChannelFactory">
        <property name="address" value="${rabbit.server.address}"/>
        <property name="userName" value="${rabbit.user.name}"/>
        <property name="password" value="${rabbit.user.password}"/>
        <property name="virtualHost" value="${rabbit.virtualhost}"/>
    </bean>

    <bean id="handlerService" class="rabbit.handler.HandlerService"/>

    <bean id="rabbitTemplate" class="rabbit.RabbitTemplate">
        <property name="channelFactory" ref="channelFactory"/>
        <property name="handlerService" ref="handlerService"/>
    </bean>



</beans>